@inherits LayoutComponentBase

<div class="page">
    <header>
        <nav class="navbar bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">DBMiloš.com</a>
            </div>
        </nav>
    </header>
    <main>
        <article class="content">
            <div class="container">
                @Body
            </div>
        </article>
    </main>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col">
